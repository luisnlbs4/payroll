<html>
  <head>
    <title>ArquiSoft</title>
      <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.4/semantic.min.css" media="screen" title="no title" charset="utf-8">
  	  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  	  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.4/semantic.min.js"></script>
  </head>
  <body style="background-color:#3F83A0">
    <div class="ui segment basic">
      <a class="ui red button"href="/">Atras</a>
    </div>

<div class="ui container teal segment">


   <div class="ui horizontal divider"><h1 class="ui teal header center aligned">
       Lista de Empleados
   </h1></div>

<div class="ui divider"></div>



  <div class="ui container">
  <h3 class="ui teal header">Empleados por Salario:</h3>
  <div class="ui divider"></div>
  <table class="ui very basic table">
  <thead>
    <tr>
      <th>CI</th>
      <th>Nombres</th>
      <th>Direccion</th>
      <th>Salario</th>
    </tr>
  </thead>
  <tbody> 
        	#foreach ($empleado in $employees)
        	
    <tr>
             #if($empleado.getClasificationPayment() == "Salario")
                <td>$empleado.getEmployeeId().toString()</td>
			    <td>$empleado.getName().toString()</td>
			    <td>$empleado.getAddress().toString()</td>
			    <td>$empleado.getPaymentClassification().getSalary()</td>
			    <td><a href="/CreatePayEmployee/$empleado.getEmployeeId().toString()" class="ui yellow button ">Ver detalle</a><td>
			    
			    
			#end  
    </tr>
			#end
  </tbody>
</table>


  <h3 class="ui teal header">Empleados por Comision:</h3>
  <div class="ui divider"></div>
  <table class="ui very basic table">
  <thead>
    <tr>
      <th>CI</th>
      <th>Nombres</th>
      <th>Direccion</th>
      <th>Salario</th>
      <th>Comision</th>
    </tr>
  </thead>
  <tbody> 
        	#foreach ($empleado in $employees)
        	
    <tr>
            #if($empleado.getClasificationPayment() == "Comision")
                <td>$empleado.getEmployeeId().toString()</td>
			    <td>$empleado.getName().toString()</td>
			    <td>$empleado.getAddress().toString()</td>
			    <td>$empleado.getPaymentClassification().getMonthlySalary()</td>
			    <td>$empleado.getPaymentClassification().getCommissionRate()</td>
			    <td><a href="/CreatePayEmployee/$empleado.getEmployeeId().toString()" class="ui yellow button ">Agregar Comision por Ventas</a><td>
			    
			#end    
    </tr>
			#end
  </tbody>
</table>


  <h3 class="ui teal header">Empleados por Hora:</h3>
  <div class="ui divider"></div>
  <table class="ui very basic table">
  <thead>
    <tr>
      <th>CI</th>
      <th>Nombres</th>
      <th>Direccion</th>
      <th>Salario por hora</th>
      <th></th>
    </tr>
  </thead>
  <tbody> 
        	#foreach ($empleado in $employees)
        	
    <tr>
            #if($empleado.getClasificationPayment() == "Hora")
                <td>$empleado.getEmployeeId().toString()</td>
			    <td>$empleado.getName().toString()</td>
			    <td>$empleado.getAddress().toString()</td>
			    <td>$empleado.getPaymentClassification().getHourlyRate()</td>
			    <td><a href="/CreatePayEmployee/$empleado.getEmployeeId().toString()" class="ui yellow button ">Agregar Horas Trabajadas</a>
			    <a href="/payEmployee/show/$empleado.getEmployeeId().toString()" class="ui blue button ">Ver Salario</a></td>
			        
			#end    
    </tr>
			#end
  </tbody>
</table>

  <a href="/payAll" class="ui fluid teal button">Pagar a todos</a>

</div>
</div>
  </body>
</html>
